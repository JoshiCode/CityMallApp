template(name="main")
  .col-md-6.col-lg-7.col-xl-8.pt-3
      h2.font-weight-bold.text-4.mb-1 SELECCIONE ESPACIO A SOLICITAR
      form#mainEspacios(action='#', method='post')
        .form-row.mb-4
          .form-group.col-lg-6
            +dropdownGroup(label="CIUDAD" title="" name="ciudad" listObj=ciudadesLista)
          .form-group.col-lg-6
            +dropdownGroup(label="NIVEL" title="" name="nivel" listObj=nivelesLista)
        .form-row.mb-4
          .form-group.col-lg-6 
             +dropdownGroup(label="TIPO" title="" name="tipo" listObj=tipoLocalLista)
          .form-group.col-lg-6
              input#mainEspaciosEspacioId.form-control.bg-light-5.rounded.border-0.text-1(type='text', value='', maxlength='100', name='email', required='', style ='display: none')
        .form-row 
          .form-group.col.mb-2
            +tabular(table = TabularTables.espaciosDisponibles class = "table table-striped table-bordered table-condensed")
          
        .form-row
          .col.text-right
            button.btn.btn-primary.btn-rounded.btn-v-3.btn-h-3.font-weight-bold(type='submit') Ver Disponibilidad
